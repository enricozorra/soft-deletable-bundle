{
  "name": "enricozorra/soft-deletable-bundle",
  "description": "Fork of andanteproject/soft-deletable-bundle â€” updated for Symfony 7 compatibility",
  "keywords": [
    "symfony",
    "symfony-bundle",
    "doctrine",
    "doctrine-orm",
    "soft-delete",
    "php",
    "php7",
    "php74",
    "symfony7"
  ],
  "type": "symfony-bundle",
  "license": "MIT",
  "homepage": "https://github.com/enricozorra/soft-deletable-bundle",
  "authors": [
    {
      "name": "Andante Project",
      "homepage": "https://github.com/andanteproject"
    },
    {
      "name": "Cristoforo Cervino",
      "homepage": "https://github.com/cristoforocervino"
    },
    {
      "name": "Luca Cividini",
      "homepage": "https://github.com/lucacividini"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/enricozorra/soft-deletable-bundle.git"
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "symfony/framework-bundle": "^6.0 | ^7.0",
    "doctrine/common": "^2.13 || ^3.0",
    "doctrine/event-manager": "^2.0"
  },
  "require-dev": {
    "ext-json": "*",
    "roave/security-advisories": "dev-master",
    "doctrine/orm": "^2.6.3",
    "doctrine/annotations": "^1.13 || ^2.0",
    "phpunit/phpunit": "^9.5",
    "doctrine/doctrine-bundle": "^2.2",
    "symfony/yaml": "^4.0 | ^5.0 | ^6.0 | ^7.0",
    "phpstan/phpstan": "^1.2",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-symfony": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.4",
    "phpspec/prophecy": "^1.15"
  },
  "autoload": {
    "psr-4": {
      "Andante\\SoftDeletableBundle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Andante\\SoftDeletableBundle\\Tests\\": "tests"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse src tests",
    "phpunit-base": "phpunit tests/",
    "phpunit": "@phpunit-base --testdox",
    "phpunit-coverage-text": "@phpunit-base --coverage-text --colors=never",
    "cs-check": "mkdir -p var/cache && php-cs-fixer fix --dry-run --diff --cache-file=var/cache/.php_cs.cache",
    "cs-fix": "mkdir -p var/cache && php-cs-fixer fix --diff --cache-file=var/cache/.php_cs.cache"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "phpstan/extension-installer": true
    }
  }
}
